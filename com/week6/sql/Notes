SQL CLAUSE
----------

FROM - table name
WHERE  - column name WHERE transcAmount > 10000
HAVING - HAVING balance > 0 
WITH - 
ORDER BY -  ASC, DSC
   FROM Student ODER BY age DESC, name ASC;
GROUP BY
   FROM Student GROUP BY name, subject;

LIMIT(rows)
   FROM Student LIMIT 5;
  
DISTINCT(remove duplicates)
    DISTINCT name From Student; 
